{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6",
      "DOM"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/template",
  ],
  "include": [
    "./src/extension.ts",
    "./src/**/*"
  ]
}
